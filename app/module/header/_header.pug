mixin header()
	//block header
	.header-wrap
		.main-cont
			.header
				a(href="/").logo
					img(src="img/logo.png", alt="")
				.header__slogan Будьте ALPHA! Будьте ПЕРВЫМИ
				.menu
					a(href="#").menu__el.menu__el--active Главная
					a(href="#").menu__el О бренде CENE
					a(href="#").menu__el Каталог
					a(href="#").menu__el Где купить
					a(href="#").menu__el Дилеры
					a(href="#").menu__el POS
				.head-toggle
					+icon("menu","icon icon-open")
					+icon("close","icon icon-close")
				.slide-menu
					.slide-menu__list
						a(href="#").slide-menu__list-el Главная
						a(href="#").slide-menu__list-el О бренде CENE
						a(href="#").slide-menu__list-el Каталог
						a(href="#").slide-menu__list-el Где купить
						a(href="#").slide-menu__list-el Дилеры
						a(href="#").slide-menu__list-el POS
	//block header end