@import 'rupture'
@import "variable/_function.styl"
@import "variable/_fonts.styl"
@import "variable/_ie.styl"
@import "variable/_helper.styl"
@import "variable/_default.styl"
@import "variable/config/_color.styl"
@import "variable/config/_typography.styl"
@import "variable/config/_btn.styl"
@import "variable/config/_input.styl"
@import "../module/**/*"

body
	@extend .type--main
	font-family $v-font
	color $main-text-color
	line-height 1.6
	letter-spacing 0.01em

.main-cont
	center(1530px,10px)

.main-cont--sm
	center(1300px,10px)

.head-main-page
	.header-wrap
		position: absolute
		top 0
		left 0
		width: 100%
		z-index 10
		background: transparent
.header-wrap
	background: #001530
	margin-bottom: 40px
.header
	f()
	align-items: center
	background: $dark
	height: 70px

.logo
	display: inline-block
	margin-right: 30px
	width: 200px
.header__slogan
	+below(1200px)
		font-size: 12px
	+below(640px)
		display: none
	up()
	color white
	font-weight:700

.menu
	+below(1200px)
		width: 60%
	+below(1024px)
		display: none !important
	f()
	align-items: stretch
	margin-left: auto
	width: 50%
.menu__el
	+below(1400px)
		padding: 19px 15px
		font-size: 12px
		flex-grow 1
	flex(mid)
	@extend .type--sm
	up()
	tr(all)
	padding: 19px 25px
	color white
	height: 69px
	font-weight: 700
	border-bottom 2px solid transparent
	&:hover
		color $yellow
.menu__el--active
	color white
	border-bottom 2px solid $yellow

//mobile menu
.head-toggle
	+above(1025px)
		display: none
	size 70px
	flex(mid)
	cp()
	margin-left: auto
	.icon
		size 25px
		fill white
	.icon-close
		display: none
.head-toggle--open
	.icon-close
		display: block
	.icon-open
		display: none

.slide-menu
	+above(1025px)
		display: none !important
	+below(640px)
		top: 51px //Высота хедера
	+below(480px)
		width: 100%
	background: black
	color white
	position: fixed
	height: calc(100% - 70px) //Отступ хедер
	z-index 1250
	top 70px
	right 0
	width: 320px
	transform translateX(100%)
	tr(all)
.slide-menu--open
	transform translateX(0%)
	overflow-y: auto
.slide-menu__list-el
	padding: 20px
	display: block
	color white
	font-size: 16px
	up()
	tr(all)
	border-bottom 1px solid rgba(255, 255, 255, 0.05)
	&:hover
		background: $red
		color white
.body-fix
	position: fixed!important
	overflow-Y: scroll!important
	width:100%!important

.main-banner
	position: relative
.filter
	position: absolute
	top 0
	left 0
	width: 100%
	height: 100%
	background: #000000a3
.main-banner__el
	height: 100vh
	width: 100%
	bg-full()

.section
	padding-top: 80px
.section-title
	up()
	@extend .type--xl
	position: relative
	padding-top: 40px
	display: block
	margin-bottom: 40px
	&:before
		content ''
		position: absolute
		width: 130px
		height: 3px
		background: $yellow
		top 0
		left 0

.title
	up()
	@extend .type--xl
	position: relative
	padding-top: 40px
	display: block
	margin-bottom: 40px
.title--line
	&:before
		content ''
		position: absolute
		width: 130px
		height: 3px
		background: $yellow
		top 0
		left 0
.section-title--center
	text-align: center
	&:before
		content ''
		left 50%
		transform translateX(-50%)

.content
	margin-bottom: 30px
.content--md
	p,li,a
		@extend .type--md
	font-weight: 300
.content--center
	text-align: center

.advant
	flex(between)

.advant__el
	flex(mid)
	fl()
.advant__el-img
	margin-bottom: 20px
.advant__el-text
	font-size: 16px

//filter
.filter-wrap
	+below(1024px)
		padding: 30px
		margin: 30px 0
	+below(640px)
		padding: 20px 10px
		margin-left: -10px
		width:calc(100% + 20px)
	padding: 60px 30px
	box-shadow 0 0 0 rgba(232, 232, 232, 0.11)
	border 1px solid rgba(221, 221, 221, 0.15)
.filter__title
	+below(1024px)
		margin-bottom: 40px
	+below(640px)
		margin-bottom: 20px
	@extend .type--lg
	font-weight 700
	text-transform uppercase
	color $black
	text-align: center
	margin-bottom: 70px
.filter-list
	+below(768px)
		fw()
	+below(640px)
		margin-bottom: 0
	flex(between)
	margin-bottom: 30px
.filter-el
	+below(768px)
		width: 48%
		margin-bottom: 20px
	+below(640px)
		width: 100%
	width: 24%
	.nice-select
		width: 100%
.filter-el__name
	up()
	font-size: 15px
	margin-bottom: 20px
	font-weight: 700
//.filter-el__select
//.select-beauty
.filter-footer
	+below(640px)
		fw()
	flex(between)
.filter-info
	+below(1440px)
		padding-right: 20px
	+below(1024px)
		width: 60%
	+below(768px)
		width: 48%
	+below(640px)
		width: 100%
		margin-bottom: 20px
	@extend .type--sm
	color #999999
	width: 80%
.filter-get
	+below(768px)
		width: 48%
	+below(640px)
		width: 100%

	@extend .btn--md
	@extend .btn--mark
	width: 24%
	padding: 15px

//filter===end

select.select-beauty
	display: none!important

.element-select
	padding: 20px 0

.nice-select:active, .nice-select.open, .nice-select:focus
	border 1px solid $border-color

.nice-select
	br(5px)
	display: block
	font-size 14px
	height: 50px
	line-height: 50px
	&.open
		border-radius 5px 5px 0 0
	.list
		width: calc(100% )
		left 0px
		border-radius 0 0 5px 5px
		border 0px solid $border-color
		border-top 0
		margin-top: 0
		color black
		li
			white-space: nowrap
			overflow: hidden
			text-overflow: ellipsis

.brand
	position: relative
	margin: 100px 0
	f()
	justify-content: space-between
	align-items: center
	padding: 40px 60px 40px 20px
	box-shadow 0 10px 45px rgba(0, 0, 0, 0.2)
	br(10px)
.brand-img
	width: 48%
.brand-info
	width:48%
.brand-info__title
	@extend .type--lg
	up()
	margin-bottom: 45px
.brand-info__list
	padding-left: 30px
	border-left 2px solid $yellow
.brand-info__list-el
	@extend .type--md
	margin-bottom: 25px
	&:last-child
		margin-bottom: 0

.brand-img__el
	bg-full()
	padding: 38% 10%
	width: 100%

.footer-map-wrap
	+below(768px)
		height: 300px
	position: relative
	padding: 5% 0
	margin-top: 90px
.footer-map
	position: absolute
	width: 100%
	height: 100%
	top 0
	left 0
	background: gray
.footer-contact
	+below(768px)
		display: none
	padding: 20px
	background: white
	z-index 10
	position: relative
	width: 350px
	margin-right: auto
	box-shadow 0 10px 45px rgba(0, 0, 0, 0.2)
	border-radius 10px

.footer-contact__row
	margin-bottom: 15px
.footer-contact__name
	color #333333
	@extend .type--sm
	margin-bottom: 5px
	opacity: .5

.footer-contact__val
	font-size: 16px
	margin-bottom: 10px
.footer-contact-get
	margin-top: 30px
	f()
	align-items: center
	font-size: 16px
	color #135d8d
	.icon
		size 20px
		fill blue
		margin-right: 15px

.footer-logo
	flex(mid)
	fl()
	margin-bottom: 40px
.footer-logo__img
	margin-bottom: 3px
.footer-logo__text
	up()
	color #333333
	font-size: 12px

.order
	margin-bottom: 30px
	.input
		width: 100%
		padding-right: 60px
.order-row
	position: relative

.order-title
	color #333333
	font-weight: 700
	max-width 220px
	margin-bottom: 20px
.order-send
	position: absolute
	right: 0
	top 0
	background: $yellow
	border 0
	height: 100%
	width: 50px
	flex(mid)
	border-radius 0 10px 10px 0
	.icon
		size 18px
		fill white
//.icon

.copyright
	margin-top: 40px
	width: 260px
	text-align: center
	font-size: 12px
	margin-left: auto
	margin-right: auto
	color #666666
	opacity: .8


.bread
	+below(640px)
		margin-bottom: 20px
	f()
	fw()
	margin-bottom: 40px
.bread__el
	margin-right: 25px
	margin-bottom: 10px
	position: relative
	@extend .type--sm
	up()
	tr(all)
	&:hover
		opacity:1
		color $yellow
	&:after
		content '|'
		position: absolute
		right: -17px
		top 0
	&:last-child
		&:after
			content ''
			display: none
		pointer-events none
		opacity: .5

.chart-list
	margin-top: 30px
.chart-list__el
	f()
	margin-bottom: 30px
.chart-list__el-img
	margin-right: 20px
	img
		size 100px
.chart-list__el-content
	width calc(100% - 130px)
	p
		&:first-child
			margin-top: 0
		&:last-child
			margin-bottom: 0
.chart-list__el-title
	display: inline-block
	margin-right: 5px
	font-weight: 700
	color black

.goods
	margin-top: 90px
.goods-el
	f()
	padding: 40px
	box-shadow 0 10px 45px rgba(0, 0, 0, 0.2)
	border-radius 10px
	margin-bottom: 30px
.goods-img
	margin-right: 60px
.goods-img__el
	size 240px
	bg-full()

//.goods-content
.goods__title
	@extend .type--lg
	up()
//.goods__text
//.goods-list-wrap
.goods-list__title
	@extend .type--md
	font-weight:700
	margin-bottom: 20px

.goods-list
	column-count 2
	margin-bottom: 35px
.goods-list__el
	font-weight:300
	padding-left: 20px
	position: relative
	margin-bottom: 5px
	&:before
		content ''
		size 10px
		round()
		background: $yellow
		top 12px
		left 0
		position: absolute

.goods-advant
	f()
	align-items: center
	justify-content: space-around
.goods-advant__el
	width: 23%
	max-width 145px
	flex(mid)
	fl()
.goods-advant__el-img
	margin-bottom: 20px
.goods-advant__el-text
	text-align: center